<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".DashBoard">

    <ImageView
        android:id="@+id/logo_icon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:layout_marginVertical="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="3dp"
        android:src="@drawable/ic_github" />


    <ImageView
        android:id="@+id/notification_icon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:layout_toStartOf="@id/user_icon"
        android:src="@drawable/ic_notification" />

    <ImageView
        android:id="@+id/user_icon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:src="@drawable/ic_user" />



    <TextView
        android:id="@+id/dash_intro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_icon"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:text="@string/dash_intro"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/dash_info"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/dash_intro"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:text="@string/dash_info"
        android:textColor="@color/black"
        android:textSize="35sp" />

    <EditText
        android:id="@+id/user_search"
        android:layout_width="228dp"
        android:layout_height="50dp"
        android:layout_below="@id/dash_info"
        android:layout_marginStart="20dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="19dp"
        android:layout_marginBottom="20dp"
        android:layout_toStartOf="@id/search_btn"
        android:background="#efefef"
        android:drawableStart="@drawable/ic_baseline_search_24"
        android:drawablePadding="8dp"

        android:hint="@string/hintText"
        android:padding="8dp"
        android:textColor="#474d57"
        android:textColorHint="#474d57" />


    <!--    First circle avatar-->

    <Button
        android:id="@+id/search_btn"
        android:layout_width="123dp"
        android:layout_height="60dp"
        android:layout_below="@id/dash_info"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="10dp"
        android:text="@string/search"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/repos"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_below="@id/user_search"
        android:background="@drawable/circle"
        android:layout_marginStart="30dp"
        android:gravity="center"
        android:text="32"
        android:textColor="@color/black" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/repo_label"
        android:layout_below="@+id/repos"
        android:text="Repo"
        android:layout_marginStart="30dp"
        android:textColor="@color/black" />


<!--    Second avatar-->

    <TextView
        android:id="@+id/followers"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_below="@id/user_search"
       android:layout_toEndOf="@+id/repos"
        android:background="@drawable/circle"
        android:layout_marginStart="20dp"
        android:gravity="center"
        android:text="32"
        android:textColor="@color/black" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/followers"
        android:id="@+id/followers_label"
        android:layout_toEndOf="@+id/repo_label"
        android:text="Followers"
        android:layout_marginStart="40dp"
        android:textColor="@color/black" />



<!--    Third Avatar-->
    <TextView
        android:id="@+id/following"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_below="@id/user_search"
        android:layout_toEndOf="@+id/followers"
        android:background="@drawable/circle"
        android:layout_marginStart="20dp"
        android:gravity="center"
        android:text="32"
        android:textColor="@color/black" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/following"
        android:id="@+id/following_label"
        android:layout_toEndOf="@+id/followers_label"
        android:text="Followings"
        android:layout_marginStart="50dp"
        android:textColor="@color/black" />


<!--    Fourth Avatar-->

    <TextView
        android:id="@+id/gists"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_below="@id/user_search"
        android:layout_toEndOf="@+id/following"
        android:background="@drawable/circle"
        android:layout_marginStart="20dp"
        android:gravity="center"
        android:text="32"
        android:textColor="@color/black" />

    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/gists_label"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gists"
        android:layout_toEndOf="@+id/following_label"
        android:text="Gists"
        android:layout_marginStart="50dp"
        android:textColor="@color/black" />


    <TextView
        android:id="@+id/label"
        android:layout_width="249dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/followers_label"
        android:layout_margin="30dp"
        android:text="Repositories"
        android:textColor="@color/black"
        android:textSize="25sp" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@id/gists_label"
        android:layout_marginStart="40dp"
        android:layout_marginTop="30dp"

        android:layout_marginEnd="20dp"
        android:layout_marginBottom="30dp"
        android:layout_toEndOf="@+id/label"
        android:src="@drawable/ic_baseline_filter_list_24" />




        <TextView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:id="@+id/rect1"
            android:layout_margin="40dp"
            android:background="@drawable/rectangle"
            android:layout_below="@id/label"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:id="@+id/rect2"
            android:layout_margin="40dp"
            android:background="@drawable/rectangle"
            android:layout_below="@id/rect1"/>







</RelativeLayout>

